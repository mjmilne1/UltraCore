# Dockerfile for UltraCore Additional Modules

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose API port
EXPOSE 8890

# Start API server
CMD ["uvicorn", "ultracore.api.additional_api:app", "--host", "0.0.0.0", "--port", "8890"]
