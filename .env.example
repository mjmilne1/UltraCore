# UltraCore Banking Platform - Environment Variables
# Copy this file to .env and update with your values

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME="UltraCore Banking Platform"
APP_VERSION="1.0.0"
DEBUG=true

# ============================================================================
# API
# ============================================================================
API_PREFIX="/api/v1"

# Server
HOST=0.0.0.0
PORT=8000

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================================================
# SECURITY
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# DATABASE (Optional)
# ============================================================================
# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/ultracore

# Redis
# REDIS_URL=redis://localhost:6379/0

# Neo4j
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=password

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================

# Payment Rails
# NPP_API_KEY=your-npp-api-key
# BPAY_API_KEY=your-bpay-api-key
# SWIFT_API_KEY=your-swift-api-key

# KYC/AML Services
# KYC_PROVIDER_API_KEY=your-kyc-api-key

# Email Service
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-app-password

# ============================================================================
# MONITORING (Optional)
# ============================================================================

# Sentry
# SENTRY_DSN=your-sentry-dsn

# OpenTelemetry
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Prometheus
# PROMETHEUS_METRICS_ENABLED=true

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# PAGINATION
# ============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
